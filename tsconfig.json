{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "**/*.ts"
  ]
}